{
  "name": "kaholo-agent",
  "version": "1.3.5",
  "description": "Agent for Kaholo",
  "main": "app.ts",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:dev": "nodemon",
    "start": "npm run build && node ./build/app.js",
    "install:windows": "npm run build && node ./build/service-windows.js",
    "install:osx": "npm run build && node ./build/service-mac.js",
    "spec": "speculate --name=kaholo-agent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kaholo/kaholo-agent.git"
  },
  "author": "Kaholo team",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Kaholo/kaholo-agent/issues"
  },
  "homepage": "https://github.com/Kaholo/kaholo-agent#readme",
  "dependencies": {
    "amqplib": "^0.6.0",
    "diskspace": "2.0.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-winston": "4.0.3",
    "fs-extra": "9.0.0",
    "ip": "1.1.5",
    "mkdirp": "0.5.1",
    "multer": "1.3.0",
    "public-ip": "2.4.0",
    "request": "2.88.2",
    "shelljs": "0.8.1",
    "socket.io-client": "2.0.4",
    "superagent": "3.8.2",
    "unzipper": "0.9.4",
    "uuid": "8.3.1",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/express": "^4.17.9",
    "@types/node": "^14.0.5",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "speculate": "1.7.4",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.3"
  },
  "spec": {
    "nodeVersion": "> 10.13.0",
    "post": [
      "mkdir -p /etc/kaholo-agent",
      "if [ ! -f /etc/kaholo-agent/kaholo-agent.conf ]; then",
      "cp /usr/lib/kaholo-agent/kaholo-agent.conf.example /etc/kaholo-agent/kaholo-agent.conf",
      "fi"
    ]
  }
}
